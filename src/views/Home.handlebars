<section class="container">
    <div class="center" id="center">
        <div class="post">
        <h1>Lista De Post: </h1>
            {{#each posts}}
            <div class="conteudo">
            <div class="postdb">
            <h3>{{titulo}}</h3>
            <p>{{conteudo}}</p>
            </div>
            <form action="/edit/{{id}}" method="get">
                <button>Atualizar</button>
            </form>
            <a href="/delete/{{id}}">
                <button>Deletar</button>
            </a>
            </div>
            {{/each}}
        </div>
        <div class="buttons">
            <a href="/post"><Button>Postagem</Button></a>

        </div>
    </div>
</section>